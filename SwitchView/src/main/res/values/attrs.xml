<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SwitchView">
        <attr name="trackDrawableOn" format="reference" />
        <attr name="trackDrawableOff" format="reference" />

        <!-- TrackColorOn & TrackColorOff will override trackDrawables-->
        <attr name="trackColorOn" format="reference|color" />
        <attr name="trackColorOff" format="reference|color" />

        <!-- Thumb Color and Icon is stackable -->
        <attr name="thumbColorOn" format="reference|color" />
        <attr name="thumbColorOff" format="reference|color" />
        <attr name="thumbIconOn" format="reference" />
        <attr name="thumbIconOff" format="reference" />

        <attr name="thumbSize" format="dimension"/>

    </declare-styleable>
</resources>